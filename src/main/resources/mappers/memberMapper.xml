<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="member">

	<select id="memberList"
		resultType="jun.st.ex.Persistence.DTO.MemberDTO">
		select userid,passwd,name,email,join_date
		from member
	</select>
	<insert id="insertMember">
		insert into member (userid,passwd,name,email,join_date) values
		(#{userid}, #{passwd}, #{name}, #{email},sysdate )
	</insert>
		<select id="login_check" 
	parameterType=
		"jun.st.ex.Persistence.DTO.MemberDTO"
	resultType="String">
		select * from member
		where userid=#{userid} and passwd=#{passwd}	
	</select>
	
	 <select id="checkPw" resultType="int">
  	select count(*) from member
  	where  userid=#{userid} and passwd=#{passwd}
  </select>
   <select id="ViewUser"
  resultType="jun.st.ex.Persistence.DTO.MemberDTO">
  select userid,passwd,name,email
  from member
  where userid=#{userid}
  </select>
  
  <update id="updateUser">
  update member
  set passwd=#{passwd},name=#{name},email=#{email}
  where userid=#{userid}
  </update>
  <delete id="deleteMember">
		delete from member
		where userid=#{userid}
	</delete>
</mapper>
